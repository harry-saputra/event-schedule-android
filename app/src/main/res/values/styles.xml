<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EventSchedule" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="notificationIconId">@drawable/ic_notification</item>
    </style>

    <style name="Theme.EventSchedule.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.EventSchedule.SideMenu" parent="Theme.EventSchedule.NoActionBar">
        <!-- no special tricks here -->
    </style>

    <style name="Theme.EventSchedule.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Theme.EventSchedule.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <!-- Set title color -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NavMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/listPreferredItemHeightSmall</item>
        <item name="android:background">@drawable/nav_item_bg_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">?attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?attr/listPreferredItemPaddingLeft</item>
    </style>
</resources>
