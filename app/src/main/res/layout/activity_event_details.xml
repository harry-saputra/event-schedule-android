<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xebia.eventschedule.eventdetails.EventDetailsActivity"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_name"
            fontPath="fonts/arial.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="2sp"
            android:paddingTop="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/running_text"
            tools:text="XebiCon 2014"/>

        <TextView
            android:id="@+id/event_date"
            fontPath="fonts/arial.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="2sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/running_text"
            tools:text="June 5, 2014"/>

        <TextView
            android:id="@+id/event_time"
            fontPath="fonts/arial.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:lineSpacingExtra="2sp"
            android:paddingBottom="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/running_text"
            tools:text="15:00 â€“ 21:00"/>

        <!-- LOCATION -->
        <TextView
            android:id="@+id/location_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tint_color"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp"
            android:text="@string/header_location"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"/>

        <include layout="@layout/event_location"/>

        <!-- CONTACT -->
        <TextView
            android:id="@+id/contact_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tint_color"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp"
            android:text="@string/header_contact"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"/>

        <include layout="@layout/event_contact"/>
    </LinearLayout>
</ScrollView>
