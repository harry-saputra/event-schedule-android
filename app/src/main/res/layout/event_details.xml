<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xebia.eventschedule.eventdetails.EventDetailsFragment"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/contentDescr_logo"
            android:src="@drawable/logo_event_details"/>

        <TextView
            android:id="@+id/event_name"
            fontPath="fonts/arial.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingTop="8dp"
            android:text="@string/app_name_med"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text"/>

        <TextView
            android:id="@+id/event_date"
            fontPath="fonts/arial.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text"
            android:text="@string/app_date"/>

        <TextView
            android:id="@+id/event_time"
            fontPath="fonts/arial.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="8dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/text"
            android:text="@string/event_time"/>

        <!-- LOCATION -->
        <TextView
            android:id="@+id/location_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp"
            android:text="@string/header_location"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"/>

        <include layout="@layout/event_location"/>

        <!-- CONTACT -->
        <TextView
            android:id="@+id/contact_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="4dp"
            android:text="@string/header_contact"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"/>

        <include layout="@layout/event_contact"/>
    </LinearLayout>
</ScrollView>
