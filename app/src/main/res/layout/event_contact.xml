<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       tools:ignore="MissingPrefix"
       tools:context=".eventdetails.EventDetailsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contact_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/primary"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="@string/header_contact"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"/>

            <TextView
                android:id="@+id/contact_name"
                fontPath="fonts/arial.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/contact_header"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/contact_icon"
                android:layout_toStartOf="@+id/contact_icon"
                android:text="@string/contact_name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text"
                android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/contact_email"
                fontPath="fonts/arial.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/contact_name"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toLeftOf="@+id/contact_icon"
                android:layout_toStartOf="@+id/contact_icon"
                android:autoLink="email"
                android:text="@string/contact_email"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/contact_phone"
                fontPath="fonts/arial.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/contact_email"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toLeftOf="@+id/contact_icon"
                android:layout_toStartOf="@+id/contact_icon"
                android:paddingBottom="8dp"
                android:text="@string/contact_phone"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text"
                android:textIsSelectable="true"/>

            <ImageButton
                android:id="@+id/contact_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/contact_phone"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/contact_header"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/descr_contact"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:src="@drawable/ic_call"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</merge>
