<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/location_content"
        fontPath="fonts/arial.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/location_header"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/location_img"
        android:layout_toStartOf="@+id/location_img"
        android:lineSpacingExtra="2sp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/location_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/running_text"
        android:textIsSelectable="true"/>

    <ImageButton
        android:id="@+id/location_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/location_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/location_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/transparent"
        android:contentDescription="@string/descr_maps"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/ic_location"/>
</RelativeLayout>
