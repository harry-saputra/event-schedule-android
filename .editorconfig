# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.{java,gradle}]
indent_size = 4
continuation_indent_size = 8
max_line_length = 120

[*.xml]
indent_size = 4

[*.md]
max_line_length = 80
